doctype
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		title Japanese Webpage
		link(rel="stylesheet" type="text/css" href="../css/app.css")
	body
		header 
			a(href="next-page.html") Website Logo
		main
			- for(var i = 1; i <= 3; i++)
				.mySlides.fade
					img(src="../img/slide" + i + ".jpg")
			a.prev(onclick="plusSlides(-1)") &#10094;
			a.next(onclick="plusSlides(1)") &#10095;
			div(style="text-align:center")
				- for(var i = 1; i <= 3; i++)
					span.dot(onclick="currentSlide(" + i + ")")
			.image-text
				h1 キャッチコピーが入ります。
				p サンプルテキストサンプルテキストサンプルテキストサンプルテキスト<br>サンプルテキストサンプルテキストサンプルテキストサンプルテキスト
		.container
			article
				table
					- for(var i = 0; i < 10; i++)
						tr(onmouseover="replaceImage("+ i +")" onmouseout="revertImage("+ i +")")
							td(rowspan="3")
								a(href="next-page.html")
									img.before(src="../img/ph_article.jpg")
									img.after(src="../img/ph_article1.jpg")
							td.timestamp 
								a(href="next-page.html") 2016.03.26
						tr(onmouseover="replaceImage("+ i +")" onmouseout="revertImage("+ i +")")
							td.headline 
								a(href="next-page.html") サンプルテキストサンプルテキストサンプルテキストサンプルテキストサンプルテキスト
						tr(onmouseover="replaceImage("+ i +")" onmouseout="revertImage("+ i +")")
							td.description 
								a(href="next-page.html") サンプルテキストサンプルテキストサンプルテキストサンプルテキストサンプルテキストサンプルテキストサンプルテキストサンプルテキストサンプルテキスト···
				a(href="next-page.html")
					.more More
						span.arrow &#10095;
			aside 
				.recommend
					a(href="next-page.html")
						.bnr Dummy Banner
					table
						tr
							td(colspan="2")
								.news-title Recommend
						- for(var i = 1; i <= 3; i++)
							tr
								td
									a(href="next-page.html")
										img(src="../img/ph_article.jpg" height="60" width="110")
								td
									a(href="next-page.html")
										p.headlines サンプルテキストサンプルテキストサンプルテキストサンプルテキスト
										p.timestamp 2016.03.26
						- for(var i = 1; i <= 3; i++)
							tr
								td(colspan="2")
									a(href="next-page.html")
										.banner Dummy Banner
		footer 
			.container 
				.kanji
					a(href="next-page.html")
						p 運営会社
						p 個人情報保護について
				.copyright ©2016 Sample
					a(href="#")
						span.arrow &#10095;
	script(type="text/javascript" src="../js/app.js")